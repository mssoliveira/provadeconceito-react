{
	"name": "provadeconceito-react",
	"version": "0.1.0",
	"private": true,
	"main": "main/main.js",
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"electron:dev": "concurrently -n \"NEXT,ELECTRON\" -c \"yellow,blue\" --kill-others \"next dev\" \"electron .\"",
		"electron:build": "next build && electron-builder"
	},
	"dependencies": {
		"@radix-ui/react-icons": "^1.3.0",
		"class-variance-authority": "^0.7.0",
		"clsx": "^2.1.0",
		"electron-serve": "^1.3.0",
		"next": "14.1.0",
		"next-themes": "^0.2.1",
		"react": "^18",
		"react-dom": "^18",
		"react-gamepads": "^1.0.0",
		"tailwind-merge": "^2.2.1",
		"tailwindcss-animate": "^1.0.7"
	},
	"devDependencies": {
		"@types/node": "^20",
		"@types/react": "^18",
		"@types/react-dom": "^18",
		"autoprefixer": "^10.0.1",
		"concurrently": "^8.2.2",
		"electron": "^28.2.3",
		"electron-builder": "^24.9.1",
		"eslint": "^8",
		"eslint-config-next": "14.1.0",
		"postcss": "^8",
		"tailwindcss": "^3.3.0",
		"typescript": "^5"
	},
	"build": {
		"appId": "io.github.mssoliveira.provadeconceito-react",
		"productName": "Prova de Conceito - react",
		"mac": {
			"category": "public.app-category.developer-tools",
			"icon": "icons/icon.icns",
			"artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
			"hardenedRuntime": true,
			"entitlementsInherit": "build/entitlements.mac.inherit-plist"
		},
		"linux": {
			"target": "AppImage",
			"artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
			"icon": "icons/icon.png",
			"category": "Development"
		},
		"win": {
			"target": "nsis",
			"artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
			"icon": "icons/icon.png"
		},
		"publish": {
			"provider": "github",
			"repo": "provadeconceito-react",
			"owner": "mssoliveira",
			"releaseType": "release"
		}
	}
}
